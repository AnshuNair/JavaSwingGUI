//				if (addChoice.equals("y") || addChoice.equals("Y")) {
//					studentFlag = true;
//					createFrame();
//				} else if (addChoice == null || !(addChoice.equals("y") || addChoice.equals("Y")))
//					studentFlag = false;
//			}
//		}
//
